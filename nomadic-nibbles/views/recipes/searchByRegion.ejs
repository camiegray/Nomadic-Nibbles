<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipes by Region - Nomadic Nibbles</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-image: url('/assets/images/search.png');
      background-attachment: fixed;
      background-size: cover;
      background-position: center;
    }
  </style>
</head>
<body class="bg-search">
  <%- include('../partials/nav') %>
  <main class="container">
    <h1>Recipes by Region</h1>
    <% if (major) { %>
      <p>Showing recipes from <strong><%= major %></strong>
        <% if (sub && sub.trim() !== "") { %> - <strong><%= sub %></strong><% } %>.</p>
    <% } else { %>
      <p>No region selected. Please go back and choose a region.</p>
    <% } %>
    <div class="recipe-grid">
      <% if (recipes.length === 0) { %>
        <p>No recipes found for the selected region.</p>
      <% } else { %>
        <% recipes.forEach(function(recipe) { %>
          <div class="recipe-item">
            <h3><a href="/recipes/<%= recipe._id %>"><%= recipe.title %></a></h3>
            <p>by <a href="/profile/<%= recipe.author._id %>"><%= recipe.author.username %></a></p>
          </div>
        <% }); %>
      <% } %>
    </div>
    <a href="/" class="btn">Back to Home</a>
  </main>
</body>
</html>
