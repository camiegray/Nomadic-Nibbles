<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= profileUser.username %>'s Profile - Nomadic Nibbles</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-image: url('/assets/images/profile.png');
      background-attachment: fixed;
      background-size: cover;
      background-position: center;
    }
  </style>
</head>
<body class="bg-profile">
  <%- include('partials/nav') %>
  <main class="container">
    <h1><%= profileUser.username %>'s Profile</h1>
    <p><strong>Region:</strong> <%= profileUser.region.major %> - <%= profileUser.region.sub %></p>
    <h2>Recipes</h2>
    <% if (recipes.length === 0) { %>
      <p>No recipes found.</p>
    <% } else { %>
      <ul>
        <% recipes.forEach(function(recipe) { %>
          <li>
            <a href="/recipes/<%= recipe._id %>"><%= recipe.title %></a>
            <% if (user && user._id.toString() === profileUser._id.toString()) { %>
              (<a href="/recipes/<%= recipe._id %>/edit">Edit</a>)
            <% } %>
          </li>
        <% }); %>
      </ul>
    <% } %>
    <% if (user && user._id.toString() === profileUser._id.toString()) { %>
      <a href="/recipes/new" class="btn">Add New Recipe</a>
    <% } %>
    <a href="/" class="btn">Back to Home</a>
  </main>
</body>
</html>
